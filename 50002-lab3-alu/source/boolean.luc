module boolean #(
    SIZE = 32 : SIZE > 0
)(
    input a[SIZE],
    input b[SIZE],
    input alufn[6],
    output bool[SIZE]
) {
    
    
    always {
        // implement boolean unit logic here
        case (alufn[3:0]) {
            b1000: bool = a & b
            b1110: bool = a | b
            b0110: bool = a ^ b
            b1010: bool = a
            default: bool = 0
        }
        
    }
    
}